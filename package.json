{
  "name": "@rainbow57/packages",
  "version": "0.0.17",
  "description": "前端常用工具集",
  "main": "dist/utils.cjs.js",
  "module": "dist/utils.esm.js",
  "browser": "dist/utils.umd.js",
  "unpkg": "dist/utils.min.js",
  "jsdelivr": "dist/utils.min.js",
  "types": "src/index.d.ts",
  "files": [
    "dist/*.js"
  ],
  "workspaces": {
    "nohoist": [
      "**"
    ],
    "packages": [
      "packages/*"
    ]
  },
  "scripts": {
    "build": "node scripts/build.js",
    "release": "node scripts/release.js",
    "lint": "eslint --cache --ext .ts packages/*/{src, __tests__}/**.ts",
    "changelog": "conventional-changelog -p angular -i CHANGELOG.md -s",
    "test": "jest --coverage",
    "postinstall": "simple-git-hooks"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rainbow57/second-life.git"
  },
  "publishConfig": {
    "access": "public",
    "registry": "https://registry.npmjs.org/"
  },
  "engines": {
    "node": ">14.6.0"
  },
  "author": "rainbow57",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/rainbow57/second-life/issues"
  },
  "homepage": "https://github.com/rainbow57/second-life#readme",
  "devDependencies": {
    "@babel/core": "^7.23.6",
    "@babel/preset-env": "^7.23.6",
    "@babel/preset-typescript": "^7.23.3",
    "@microsoft/api-extractor": "^7.38.5",
    "@rollup/plugin-babel": "^6.0.4",
    "@rollup/plugin-commonjs": "^23.0.7",
    "@rollup/plugin-json": "^5.0.2",
    "@rollup/plugin-node-resolve": "^15.2.3",
    "@rollup/plugin-replace": "^5.0.5",
    "@rollup/plugin-terser": "^0.2.1",
    "@rollup/plugin-typescript": "^10.0.1",
    "@types/jest": "^29.5.11",
    "@types/node": "^18.19.3",
    "@typescript-eslint/parser": "^5.62.0",
    "babel-jest": "^29.7.0",
    "brotli": "^1.3.3",
    "chalk": "4.1.2",
    "commitizen": "^4.3.0",
    "conventional-changelog-cli": "^2.2.2",
    "enquirer": "^2.4.1",
    "eslint": "^8.56.0",
    "eslint-plugin-jest": "^27.6.0",
    "execa": "5.1.1",
    "fs-extra": "^11.2.0",
    "jest": "^29.7.0",
    "jest-environment-jsdom": "^29.7.0",
    "lint-staged": "^13.3.0",
    "minimist": "^1.2.8",
    "prettier": "^2.8.8",
    "puppeteer": "^19.11.1",
    "rollup": "^3.29.4",
    "rollup-plugin-dts": "^5.3.1",
    "rollup-plugin-polyfill-node": "^0.11.0",
    "rollup-plugin-typescript2": "^0.34.1",
    "semver": "^7.5.4",
    "simple-git-hooks": "^2.9.0",
    "tslib": "^2.6.2",
    "typescript": "^4.9.5"
  },
  "lint-staged": {
    "*.{js, json}": [
      "prettier --write"
    ],
    "*.ts?(x)": [
      "eslint",
      "prettier --parser=typescript --write"
    ]
  },
  "simple-git-hooks": {
    "pre-commit": "pnpm lint-staged",
    "commit-msg": "node scripts/verifyCommit.mjs"
  },
  "config": {
    "commitizen": {
      "path": "cz-conventional-changelog"
    }
  }
}
