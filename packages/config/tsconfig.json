{
	"include": ["src/**/*/*.ts", "src/**/*.ts", "src/*.ts", "test/*.*.ts", "test/*/*.*.ts", "../utils/src/validate/validate.ts", "../utils/src/validate/validate.ts"],
	"output": "./dist/",
	"paths": {
		"src/*": ["src/*", "src/*/*"]
	},
	"compilerOptions": {
		"target": "es5",
		"lib": ["ESNext", "DOM", "DOM.Iterable"],
		"jsx": "preserve",
		"module": "ES2015",
		"moduleResolution": "node",
		"sourceMap": true,
		"esModuleInterop": true,
		"forceConsistentCasingInFileNames": true,
		"strict": true,
		"skipLibCheck": true
	}
}